extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
      h1= heading
      p.lead.text-light
        | These are some of the projects I have created with the techdegree program so far.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      each project in assignment
        .cell
          a(href=`${project.project_link}`)
            img.thumbnail(src=`${project.project_thumbnails}`)
            h5 
              | #{project.project_name}
      
